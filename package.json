{
  "name": "uros-rml-language-server",
  "displayName": "UrosRML Language Support",
  "description": "Language support for UrosRML, a ubiquitous resource modeling language.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "uros-rml",
        "aliases": [
          "UrosRML",
          "uros-rml"
        ],
        "extensions": [
          ".rml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "uros-rml",
        "scopeName": "source.uros-rml",
        "path": "./syntaxes/uros-rml.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:uros-rml"
  ],
  "main": "./out/extension.js",
  "dependencies": {
    "antlr4": "^4.13.1",
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.3",
    "vscode-languageserver": "^8.0.2",
    "@vscode/vsce": "^2.15.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:server": "tsc -p ./src/server/tsconfig.json"
  }
}