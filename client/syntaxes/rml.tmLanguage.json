{
  "scopeName": "source.rml",
  "patterns": [
    {
      "match": "\\b(thing|interface|implements|properties|behavior|state|on|command|event|if|else|goto|send)\\b",
      "name": "keyword.control.rml"
    },
    {
      "match": "\\b(boolean|UInt8|Int32|String)\\b",
      "name": "storage.type.rml"
    },
    {
      "match": "[a-zA-Z_][a-zA-Z_0-9]*",
      "name": "entity.name.function.rml"
    },
    {
      "match": "(true|false)",
      "name": "constant.language.boolean.rml"
    },
    {
      "match": "[0-9]+",
      "name": "constant.numeric.rml"
    },
    {
      "match": "\"([^\"\\\\]|\\\\.)*\"",
      "name": "string.quoted.double.rml"
    },
    {
      "match": "//.*",
      "name": "comment.line.double-slash.rml"
    },
    {
      "match": "/\\*[^*]*\\*+(?:[^/*][^*]*\\*+)*/",
      "name": "comment.block.rml"
    }
  ]
}