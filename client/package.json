{
    "name": "rml-lsp-client",
    "description": "VS Code client for Resource Modeling Language (RML) language server",
    "author": "Your Name",
    "license": "MIT",
    "version": "0.0.1",
    "publisher": "yourname",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "rml",
                "aliases": [
                    "RML",
                    "rml"
                ],
                "extensions": [
                    ".uros"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rml",
                "scopeName": "source.rml",
                "path": "./syntaxes/rml.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:rml"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^12.0.0",
        "@types/vscode": "^1.52.0",
        "typescript": "^4.0.0",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.0"
    }
}